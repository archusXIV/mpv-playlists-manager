#!/bin/bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154
# This function is called multiple times across this program,
# but let's ensure temporary files are removed before we exit out. 
_CleanTmpDir() {
    if (( $(_GetLinesList -q) > 0 )); then
        cp "$tmp_dir"/DefaultTitles "$titles_dir"/default.m3u.titles
        rm -f "$tmp_dir"/* >/dev/null 2>&1
    elif [[ -f "$titles_dir"/default.m3u.titles ]]; then
        rm -f {"$titles_dir"/default.m3u.titles,"$tmp_dir"/*} >/dev/null 2>&1
    fi
}

