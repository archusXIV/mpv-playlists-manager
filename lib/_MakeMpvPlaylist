#!/bin/bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154,SC2034
_MakeMpvPlaylist() {
    
    makeMpvPlaylistAudiOptions=(
        "${mpvGenOptions_X[@]}"
        "${mpvAudioFormatOptions[@]}"
    )

    makeMpvPlaylistVideOptions=(
        "${mpvGenOptions_X[@]}"
        "${mpvVideoOptions_X[@]}"
        "${mpvVideoFormatOptions[@]}"
    )

    # change mpv settings in ~/.config/mpm/mpmrc
    case "$1" in
        --fzf)
            if [[ $localDir == "$radios_dir" ]]; then
                mpv --no-config --cache=no \
                --no-terminal --force-window=no \
                "${mpvGenOptions_SK[@]}" \
                "${mpvGenOptions_ID[@]}" "$m3uFile" &
            else
                mpv --no-terminal "${mpvGenOptions_SK[@]}" \
                "${mpvGenOptions_ID[@]}" "$m3uFile" &
            fi
            _WhileMpvIsRunning &
            _Menu
        ;;
        --local-background)
            cd "$localDir"/"$dir" && {
                use_mpvc_locally="yes"
                localPlaylist=yes
                echo "local-background" > "$NOWPLAYING"
                find . -type f | sort | sed 's,.*/,,' \
                | mpv --no-terminal "${mpvGenOptions_X[@]}" --playlist=- &
                _WhileMpvIsRunning &
            }
        ;;
        --local-foreground)
            cd "$localDir"/"$dir" && {
                use_mpvc_locally="no"
                echo "local-foreground" > "$NOWPLAYING"
                _LoadAudioVideoAdvice
                find . -type f | sort | sed 's,.*/,,' \
                | mpv "${mpvGenOptions_X[@]}" --playlist=-
                _RemoveMpvTmp
            }
        ;;
        --local-dirs)
            mpv --no-terminal \
            "${mpvGenOptions_SK[@]}" \
            "${mpvGenOptions_ID[@]}" \
            "${mpvVideoOptions_FS[@]}" "$m3uFile" &
            _WhileMpvIsRunning &
        ;;
        --online-audio)
            use_mpvc_online="yes"
            mpv --no-terminal \
            "${makeMpvPlaylistAudiOptions[@]}" "$m3uFile" &
            echo "${m3uFile##*/}" > "$NOWPLAYING"
            _WhileMpvIsRunning &
        ;;
        --online-video)
            use_mpvc_online="yes"
            mpv --no-terminal \
            "${makeMpvPlaylistVideOptions[@]}" "$m3uFile" &
            echo "${m3uFile##*/}" > "$NOWPLAYING"
            _WhileMpvIsRunning &
        ;;
        --terminal-audio)
            _LoadAudioVideoAdvice
            mpv "${makeMpvPlaylistAudiOptions[@]}" "$m3uFile"
            _RemoveMpvTmp
        ;;
        --terminal-video)
            _LoadAudioVideoAdvice
            mpv "${makeMpvPlaylistVideOptions[@]}" "$m3uFile"
            _RemoveMpvTmp
        ;;
    esac

}
