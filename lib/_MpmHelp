#!/usr/bin/env bash
## This is a part of main script: mpm

# shellcheck disable=SC2154
_MpmHelp() {

    echo "${lessColor}"

    case "$1" in
        -b)
            clear; head -n 28 /usr/local/share/doc/mpm/mpm_bindings
            read -rsn 1 quit
            case "$quit" in *) return ;; esac
        ;;
        -m) _ManualsMenu ;;
        -u) less "$HELP" ;;
    esac

    echo "${nc}"

}
