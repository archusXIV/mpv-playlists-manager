#!/bin/bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154,SC2034
_LoadAudioVideo() {

    local m3uFile

    _PidOfMpv >/dev/null && {
        kill -SIGTERM "$(_PidOfMpv)"
        _RmMpvTmp
        sleep 0.5
    }

    case "$1" in
        -a|-v)
            if [[ $arg = -a && -s $AUDIO_URLS ]]; then
                m3uFile="$AUDIO_URLS"
                _MpvcTest -a
            elif [[ $arg = -v && -s $VIDEO_URLS ]]; then
                m3uFile="$VIDEO_URLS"
                _MpvcTest -v
            else
                echo " ${critical}No links in the $Type list${nc}"
                sleep 2 && return
            fi
        ;;
        -ca)
            m3uFile="$SELECTED_URLS1"
            _MpvcTest -a
        ;;
        -cv)
            m3uFile="$SELECTED_URLS1"
            _MpvcTest -v
        ;;
        -la)
            m3uFile="$playlists_dir/$list"
            _MpvcTest -a
        ;;
        -lv)
            m3uFile="$playlists_dir/$list"
            _MpvcTest -v
        ;;
        -qa)
            m3uFile="$DEFAULT_LIST"
            _MpvcTest -a
        ;;
        -qv)
            m3uFile="$DEFAULT_LIST"
            _MpvcTest -v
        ;;
    esac

    _Menu

}
