#!/usr/bin/env bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154
_IfQuitAfterTask() {

    __testListsToSave() {
        if [[ -s "$AUDIO_URLS" || -s "$VIDEO_URLS" ]]; then
            _SaveOnExit
        else
            if [[ -e $NOWPLAYING ]]; then
                mpmPid=$$
                sed -i "/${mpmPid}/d" "$MPM_PIDS"
            else
                rm "$MPM_PIDS"
            fi
            _PolybarIpc
            nc=$'\e[0m';
            echo "${nc}"
            echo -e "\033]11;${default_bg}\007"
            clear
            exit 0
        fi
    }

    case "$1" in
        -d)
            if [[ $quit_after_task == yes ]]; then
                __testListsToSave
            else
                _CheckParallelDownloads --after
                _Menu
            fi
        ;;
        -x)
            _MpvOwnsTmpList --list --quit || __testListsToSave
        ;;
    esac

}
