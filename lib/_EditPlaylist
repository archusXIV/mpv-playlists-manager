#!/bin/bash
## This is a part of main script: mpm.

_EditPlaylist() {
    while true; do
        clear
        cd "$playlists_dir"
        printf '%s\n' " ${g}Choose a playlist to edit:${nc}"
        PS3=
        __
        select list in $(find . -name "*.m3u" -o -name "*.m3u_origin" \
            | sort -d | sed 's,.*/,,'); do
                __
                $EDITOR "$list"
                echo -e " ${g}$list saved${nc}\n"
                read -rsn 1 -p ${g}' [C]ontinue editing, [B]ack to menu.'${nc} edit
                case "$edit" in
                    c|C)
                        break
                        __
                    ;;
                    b|B)
                        _Menu
                    ;;
                esac
        done
        
    done
    break
}
