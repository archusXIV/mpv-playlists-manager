#!/bin/bash
## This is a part of main script: mpm.

# shellcheck disable=SC2034,SC2154
_WhileMpvIsRunning() {
    mpv_is_running="yes"
    while _PidOfMpv >/dev/null && [[ -e $NOWPLAYING ]]; do
        sleep 1.5
    done
    localPlaylist="no"
    if [[ $mpvc_tui == native ]]; then
        sed -i '1d' "$tmp_dir"/playerSelectedFile
        kill -SIGTERM "$(pidof -x fzf)" 2>/dev/null
        _RemoveMpvTmp
        mpv_is_running=no
    else
        kill -SIGTERM "$(pidof -x "$mpvc_tui")" 2>/dev/null
        _RemoveMpvTmp
        mpv_is_running=no
    fi
    _MenuFooter
}
