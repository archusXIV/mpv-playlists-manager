#!/usr/bin/env bash
## This is a part of main script: mpm.

# shellcheck disable=SC2034,SC2154
_WhileMpvIsRunning() {

    local mpv_is_running
    mpv_is_running="yes"
    touch "$tmp_dir"/playerSelectedFile

    while _PidOfMpv >/dev/null; do
        sleep 1
    done

    localPlaylist="no"
    mpv_is_running="no"

    if [[ $mpvc_tui == native ]]; then
        tui=fzf
    else
        tui="$mpvc_tui"
    fi

    _RemoveMpvTmp
    kill -SIGTERM "$(pidof -x "$tui")" 2>/dev/null
    _MenuFooter

}
