#!/bin/bash
## This is a part of main script: mpm.

_GetSelected() {
    # we don't quote here because yt-dlp will fail.
    for i in ${array[*]}; do
        ((i++))
        sed -n "${i}p" "$playlists_dir"/"$list" \
        >> "$CHOOSE1"
    done
    unset i

    for t in "${array[@]}"; do
        sed -n "${t}p" "$titles_dir"/"$list.titles" \
        >> "$titles_dir"/selected.titles
    done
    unset t
}

