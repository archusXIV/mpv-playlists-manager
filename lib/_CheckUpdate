#!/usr/bin/env bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154
_CheckUpdate() {

    local newVerion

    [[ $check_updates == yes ]] && {
        newVerion=$(curl -sL "$MPM_VERSION")
        [[ $newVerion != "$VERSION" ]] && \
            printf '%s\n' " ${critical}${b}$newVerion available${nb}${nc}"
    }

}
