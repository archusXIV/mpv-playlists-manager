#!/bin/bash
## This is a part of main script: mpm.

# shellcheck source=/dev/null
# shellcheck disable=SC2154
_ChooseTheme() {

    clear

    currentTheme=$(awk -F= '/THEME=/{print $2}' "$MPMRC")
    echo -e "\n ${info}Current theme: ${task}$currentTheme${nc}\n"

    PS3=""$'\n'" ${info}Please choose a theme, [${mtitle}C${info}]ancel: ${nc}"
    select newTheme in $(grep -E '[[:alpha:]])' "$THEMERC" | sed 's/)//;/#/d'); do
        [[ $REPLY =~ [a-zA-Z] ]] && {
            printf '\n%s\n' " ${critical}Selection aborted...${nc}"
            sleep 2; break
        }
        sed -i "s/THEME=${currentTheme}/THEME=${newTheme}/" "$MPMRC"
        . "$MPMRC"
        _Theme "$newTheme"
        break
    done
    
}