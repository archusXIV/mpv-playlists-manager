#!/bin/bash
## This is a part of main script: mpm.

_CopyVideo() {

    [[ -f $tmp_dir/1 ]] && rm "$tmp_dir"/1

    while (( $(grep "" -c "$QUEUE") > 0 )); do
        __
        echo -e " Paste an url to fill the ${g}video${nc} playlist:\n"
        read -r url

        if [[ $url =~ 'playlist?list=' ]]; then
            echo -e " ${g}Getting titles & links from playlist...Please be patient.${nc}\n"
            youtube-dl --get-title --no-warnings "$url" >> "$VIDEO_TITLE"
            _GetYoutubePlaylistUrls -v
            _RemoveCrap
        else
            echo "$url" | tee -a "$QUEUE" >> "$VIDEO_INFO"
            __
            echo -e " ${g}Testing url...${nc}\n"
            _RemoveCrap
            url=$(sed -n '$p' "$VIDEO_INFO")
            youtube-dl -F --no-warnings "$url" >"$YTOP"
            if [[ $? -eq 1 ]]; then
                echo -e " ${r}${b}No format code found!${nb}\n$line will be removed."
                echo " ${g}Please visit: $supportedsites${nc}"
                sed -i '$d' {"$QUEUE","$VIDEO_INFO"}
                _RemoveCrap
                sleep 5
                [[ $(_GetLinesList -v) -eq 0 ]] && _Menu
            else
                echo -e " ${g}Getting video title...${nc}\n"
                youtube-dl --get-title --no-warnings \
                "$url" >> "$VIDEO_TITLE"
                _RemoveCrap
            fi
        fi

        _ResizeWindow
        clear
        _ListsCount
        __
        echo -e "                                                    ${r}::video options::${nc}"
        echo -e "                              ┌─────────────────────────────────────────────────────────────┐"
        echo -e "                              │     1) Add more video links       4) Play current list      │"
        echo -e "                              │     2) Download current list      5) View current list      │"
        echo -e "                              │     3) Save playlist as           6) Back to main menu      │"
        echo -e "                              └─────────────────────────────────────────────────────────────┘"
        echo -e "                                                    ${g}${b}Select an item${nb}${nc}"
        __
        read -rsn 1 options
        case "$options" in
            1)  continue
                __ ;;
            2)  _GetVideo
                break ;;
            3)  _Save -v
                __ ;;
            4)  _LoadVideo -v
                __ ;;
            5)  _ViewUrlInfo -v
                __ ;;
            6)  _Menu
                __ ;;
        esac
    done
}
