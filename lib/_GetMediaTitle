#!/bin/bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154
_GetMediaTitle() {

    case "$1" in
        -a) LIST="$AUDIO_URLS" ;;
        -l) LIST="$playlists_dir"/"$list" ;;
        -q) LIST="$QUEUE" ;;
        -v) LIST="$VIDEO_URLS" ;;
    esac

    mapfile -t MEDIATITLES < <(grep '^https' "$LIST")

    for line in "${MEDIATITLES[@]}"; do
        youtube-dl \
        --skip-download \
        --get-title \
        "${ytdlPreset_DW[@]}" "$line" 2>/dev/null
    done

}