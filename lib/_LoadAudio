#!/bin/bash
## This is a part of main script: mpm.

_LoadAudio() {

    clear
    __
    echo "${r}Tip: You may want to put this in your mpv.conf:"
    printf '%s\n' "term-playing-msg='Tiltle: \${media-title}'"
    echo "Otherwise press I in mpv for more infos.${nc}"
    __
    case "$1" in
        -a)
            mpv --no-video "$AUDIO_INFO"
            if [[ -f "$AUDIO_INFO" ]]; then
                read -rsn 1 -p ${r}' Temporary audio list still exist, KEEP it? [Y/n]:'${nc} keep
                case "$keep" in
                    y|Y)    _Menu ;;
                    n|N)    rm {"$AUDIO_INFO","$AUDIO_TITLE"}
                            _Menu ;;
                esac
            else
                _CleanTmpDir
                _Menu
            fi
        ;;
        -q)
            mpv --no-video "$QUEUE"
            _Menu
        ;;
        -l)
            mpv --no-video "$list"
            _Menu
        ;;
    esac

}
