#!/usr/bin/env bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154,SC2034
_FzfSaveRemoveTmpLinks() {

    _ResizeWindow --main

    header="Tab:select items, Ctrl+A:select ALL, Enter:confirm, ESC:cancel:"

    nl "$current_titles" | sed 's/\s*//;s/\t/  /' | fzf \
        --cycle \
        --multi \
        --reverse \
        --header-first \
        --scroll-off=5 \
        --pointer '<>' \
        --border rounded \
        --prompt='Search: ' \
        --bind ctrl-a:select-all \
        --border-label "| ${critical}$action ${nc}titles from ${Type//.m3u} tmp list |" \
        --header "${info}${header}${nc}" | awk '{print $1}' > "$FZFSELTITLES"

    if [[ ! -s $FZFSELTITLES ]]; then
        rm "$FZFSELTITLES"
        _Menu
    else
        clear
        [[ $action == Remove ]] && {
            _RemoveTmpLinks
            return
        }
    fi

}
