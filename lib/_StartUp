#!/bin/bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154
_StartUp() {
    # needed to warn the user when the default list isn' t empty.
    [[ -s $DEFAULTM3UTITLES && -s $QUEUE ]] && {
        touch "$tmp_dir"/1
        cp -f "$DEFAULTM3UTITLES" "$DEFAULTITLES"
        rm "$DEFAULTM3UTITLES"
    }

    _Theme "$THEME"
    _Menu
}