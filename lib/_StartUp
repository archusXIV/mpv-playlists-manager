#!/usr/bin/env bash
## This is a part of main script: mpm.

# shellcheck disable=SC2154
_StartUp() {

    local pidofMpv="$tmp_dir/mpv.pid"
    _ResizeWindow --main
    _PolybarIpc

    [[ -s $DEFAULTM3UTITLES && -s $DEFAULT_LIST ]] && {
        touch "$tmp_dir"/1
        mv -f "$DEFAULTM3UTITLES" "$DEFAULT_TITLES"
    }

    if  [[ -n $(_PidOfMpv) && ! -e $tmp_dir/playerSelectedFile ]]; then
        clear
        _BlankLine
        printf '%s\n' "                               ${critical}┌───────────────────────────────────────────────────────────┐" \
        "                               │   MPV IS RUNNING OR IS IDLE, YOU WON'T BE ABLE TO PLAY    │" \
        "                               │   ANY PLAYLISTS OR LOCAL MEDIA FILES UNLESS YOU STOP IT,  │" \
        "                               │   EDITING AND MAKING PLAYLISTS WILL STILL BE POSSIBLE.    │" \
        "                               │            DO YOU WISH MPV TO QUIT NOW [Y/n]:             │" \
        "                               └───────────────────────────────────────────────────────────┘${nc}"
        _PidOfMpv > "$pidofMpv"

        read -rsn 1 quitmpv

        case "$quitmpv" in
            [nN]) _Menu ;;
            y|*)
                _KillMpv
                rm "$pidofMpv"
                _Menu
            ;;
        esac

    elif _PidOfMpv >/dev/null && [[ -e $tmp_dir/playerSelectedFile ]]; then
        clear
        _BlankLine
        printf '%s\n' "                        ${critical}┌────────────────────────────────────────────────────────────────────────────┐" \
        "                        │   MPV IS RUNNING, IN MAIN MENU PRESS N TO ACCESS OR CONTROL THE PLAYLIST   │" \
        "                        └────────────────────────────────────────────────────────────────────────────┘${nc}"
        read -t 3 -rsn 1
        case "$REPLY" in *) _Menu ;; esac
    else
        rm {"$NOWPLAYING","$tmp_dir"/temporary*} 2>/dev/null
        _Menu
    fi

}
