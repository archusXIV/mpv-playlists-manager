#!/bin/bash
## This is a part of main script: mpm.

_GetAudio() {

    cd "$audios_dir"
    cp -f "$AUDIO_INFO" "$AUDIO_INFO"_origin 2>/dev/null

    for url in $(grep '^https' "$AUDIO_INFO"); do
        __
        echo -e " ${g}Codes for: $(_GetLinkTitle -a).${nc}\n"
        youtube-dl -F --no-warnings "$url" | sed -n '1,5d;6,7p;/audio only/p' 2>/dev/null
        __
        echo " ${g}Choose a format code: ${nc}"
        read -r code

        clear

        if (( $(_GetLinesList -a) < 2 )); then
            __
            echo " ${g}There is $(_GetLinesList -a) audio file left to download.${nc}"
        else
            __
            echo " ${g}There are $(_GetLinesList -a) audio files left to download.${nc}"
        fi

        echo " ${g}Please be patient while downloading..."
        echo -e " ${r}$(_GetLinkTitle -a).${nc}\n"
        youtube-dl -f "$code" --no-warnings --progress "$url"
        sed -i '1d' {"$AUDIO_INFO","$AUDIO_TITLE"}
        clear
    done

    echo -e " ${g}Done\n${nc}"

    if [[ -n $(find . -iname "*.webm") ]]; then
        echo -e " ${r}Advisory: IF YOU CHOOSE CONVERSION, ALL FILES WILL BE IN THE CHOSEN FORMAT.${nc}\n"
        find . -iname "*.webm" | sed 's,.*/,,'
        __
        echo -e " ${g}Do you wish to convert them? [Y/n]: ${nc}\n"
        read -rsn 1 answer
        case "$answer" in
            Y|y)    _ConvertAudio && _GetCompleted -a ;;
            n|N)    _GetCompleted -a ;;
        esac
    else
        _GetCompleted -a
    fi

}
