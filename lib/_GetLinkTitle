#!/bin/bash
## This is a part of main script: mpm.

_GetLinkTitle() {
    case "$1" in
        -a)
            sed -n '1p' "$AUDIO_TITLE"
        ;;
        -l)
            sed -n '1p' "$titles_dir"/"$list".titles
        ;;
        -q)
            sed -n '1p' "$tmp_dir"/DefaultTitles 2>/dev/null
        ;;
        -v)
            sed -n '1p' "$VIDEO_TITLE"
        ;;
    esac
}

