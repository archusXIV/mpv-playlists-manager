#!/bin/bash
## This is a part of main script: mpm.

_GetLinkTitle() {
    case "$1" in
        -a) sed -n '1p' "$AUDIO_TITLE" ;;
        -c) sed -n '1p' "$CHOOSE2" ;;
        -l) sed -n '1p' "$titles_dir"/"$list.titles" ;;
        -q) sed -n '2p' "$QUEUE" ;;
        -v) sed -n '1p' "$VIDEO_TITLE" ;;
    esac
}

